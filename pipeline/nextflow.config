// Project name
params.project = 'epibuilder'

// Default input and output paths
params.input = 'input.fasta'
params.output_dir = 'results'

// Process-level resource configuration
process {
    withName: run_epibuilder_core {
        cpus = 2
        memory = '2 GB'
    }
    withName: run_bepipred3 {
        cpus = 1
        memory = '1 GB'
    }
    withName: run_algpred2 {
        cpus = 1
        memory = '1 GB'
    }
}

// Directory to store intermediate files
workDir = 'work'

// Base directory to store final output
params.outdir = "${params.output_dir}"